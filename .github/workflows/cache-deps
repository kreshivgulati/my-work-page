name: Cache Dependencies

on:
  push:
    branches:
      - main
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      # Checkout repo
      - name: Checkout repository
        uses: actions/checkout@v3

      # Cache dependencies
      - name: Prime cache-a2fe9dd
        id: prime-cache  # <-- this is the step ID
        uses: actions/cache@v4
        with:
          path: ~/.npm
          key: cache-a2fe9dd
          restore-keys: |
            cache-a2fe9dd

      # Echo cache hit/miss
      - name: Cache result
        run: echo "Cache hit: ${{ steps.prime-cache.outputs.cache-hit }}"
      
      # Install dependencies
      - name: Install dependencies
        run: npm install

